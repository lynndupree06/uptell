<div class="container">
  <%= render :partial => 'create_story' %>

  <br/>
  <hr/>
  <div id="storyText" class="col-xs-12 col-md-12">
    <form>
      <div class="form-group">
        <label>Title:*</label>
        <input class="form-control" type="text" name="title"><br/><br/>
      </div>

      <div class="form-group">
        <label>Description:*</label>
        <textarea class="form-control" name="description" rows="5" cols="50"></textarea>
      </div>

      <br/><br/>

      <div>
        <button class="btn btn-primary" type="submit" form="textEditor" value="submittedStory">Submit</button>
        <button class="btn btn-default" type="reset" form="textEditor" value="resetStory">Reset</button>
        <button class="btn btn-default" type="button" form="textEditor" value="draftStory">Save</button>
      </div>
    </form>

  </div>
</div><!--/.container-->